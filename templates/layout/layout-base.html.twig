<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Dev in the hood{% endblock title %}</title>
    <link rel="icon" href="{{ asset('img/favicon.png') }}">

    {% block stylesheets %}
        {% include 'includes/_stylesheets.html.twig' %}
    {% endblock stylesheets %}
</head>
<body>
    <aside style="width: 30%; float: left">
        <nav>
            <ul>
                <li>
                    <a href="{{ relativeUrl('app_homepage') }}">homepage</a>
                </li>
                <li>
                    <a href="{{ relativeUrl('app_user_list', {locale: 'fr'}) }}">utilisateurs</a>
                    <a href="{{ relativeUrl('app_user_list', {locale: 'en'}) }}">users</a>
                </li>
                <li>
                    <a href="{{ relativeUrl('app_user_view', {locale: app.locale, id: 1}) }}">user 1</a>
                </li>
            </ul>
        </nav>
    </aside>
    <section style="width: 70%; float: left">
        <center>
            <h1>This is a demo</h1>
            <img src="{{ asset('img/logo.png') }}">
            <h2>Keep calm</h2>
            {% for level, messages in flash() %}
                {% for message in messages %}
                    <p style="background-color: white; color: red;">{{ level|upper ~ '! - ' ~ message }}</p>
                {% endfor %}
            {% endfor %}
        </center>
    </section>
    <div>
        {% block content %}
        {% endblock content %}
    </div>

{% block javascripts %}
    {% include 'includes/_javascripts.html.twig' %}
{% endblock javascripts %}
</body>
</html>
